{
  "name": "ranking-pro-admin",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "npx dotenv-cli -e .env.development -- nest start",
    "dev": "npx dotenv-cli -e .env.development -- nest start --watch",
    "debug": "npx dotenv-cli -e .env.development -- nest start --debug --watch",
    "prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:unit": "jest --runInBand --config ./jest.unit.config.ts --watch",
		"test:int": "jest --runInBand --config ./jest.int.config.ts --detectOpenHandles --watch",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_wmodules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "containers:dev": "npx dotenv-cli -e .env.development -- docker compose up -d",
    "migration-run:dev": "npx dotenv-cli -e .env.development -- ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js -d ./src/infra/database/typeorm/config.ts migration:run",
		"migration-generate:dev": "npx dotenv-cli -e .env.development -- ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js -d ./src/infra/database/typeorm/config.ts migration:generate ./src/infra/database/typeorm/migrations/$npm_config_name",
		"migration-create:dev": "npx dotenv-cli -e .env.development -- npm run typeorm -- migration:create ./src/infra/database/typeorm/migrations/$npm_config_name",
		"migration-revert:dev": "npx dotenv-cli -e .env.development -- ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js -d ./src/infra/database/typeorm/config.ts migration:revert"
  },
  "dependencies": {
    "@nestjs/common": "^11.1.5",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.5",
    "@nestjs/microservices": "^11.1.5",
    "@nestjs/typeorm": "^11.0.0",
    "amqp-connection-manager": "^4.1.14",
    "amqplib": "^0.10.8",
    "pg": "^8.16.3",
    "reflect-metadata": "^0.2.0",
    "rxjs": "^7.8.1",
    "typeorm": "^0.3.25"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.7",
    "@nestjs/schematics": "^11.0.5",
    "@nestjs/testing": "^11.1.5",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
    "@types/pg": "^8.15.5",
    "@types/supertest": "^6.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.5.0",
    "prettier": "^3.0.0",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
